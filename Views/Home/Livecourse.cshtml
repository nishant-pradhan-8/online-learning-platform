        const videoPlayer = document.getElementById('courseVideo');
        const videoSource = document.getElementById('videoSource');
        const videoTitle = document.getElementById('videoTitle');
        const videoDescription = document.getElementById('videoDescription');
        const videoDuration = document.getElementById('videoDuration');
        const videoViews = document.getElementById('videoViews');
        const lessonContainer = document.querySelector('.space-y-2');
        const prevBtn = document.getElementById('prevVideoBtn');
        const nextBtn = document.getElementById('nextVideoBtn');
        const completeBtn = document.getElementById('completeLessonBtn');
        const bookmarkBtn = document.getElementById('bookmarkBtn');
        const speedBtn = document.getElementById('speedBtn');
        const mobilePrevBtn = document.getElementById('mobilePrevBtn');
        const mobileNextBtn = document.getElementById('mobileNextBtn');
        const mobilePlayBtn = document.getElementById('mobilePlayBtn');

        // Initialize
        loadVideo(currentVideoIndex);
        generateLessonList();

        // Function to load video by index
        function loadVideo(index) {
            const videoData = courseVideos[index];
            
            // Update video source
            videoSource.src = videoData.videoUrl;
            videoPlayer.load();
            videoPlayer.playbackRate = playbackSpeed;
            
            // Update video information
            videoTitle.textContent = videoData.title;
            videoDescription.textContent = videoData.description;
            videoDuration.textContent = videoData.duration;
            videoViews.textContent = videoData.views;
            
            // Update active lesson
            updateActiveLesson(index);
            
            // Update navigation buttons
            updateNavigationButtons();
            
            // Update complete button
            updateCompleteButton(videoData.completed);
            
            // Update progress
            updateProgress();
        }

        // Function to generate lesson list
        function generateLessonList() {
            lessonContainer.innerHTML = '';
            
            courseVideos.forEach((video, index) => {
                const lessonItem = document.createElement('div');
                lessonItem.className = `lesson-item border rounded-lg p-3 cursor-pointer transition duration-200 ${index === currentVideoIndex ? 'border-blue-300 bg-blue-50' : 'border-gray-200 hover:bg-gray-50'}`;
                lessonItem.dataset.videoIndex = index;
                
                lessonItem.innerHTML = `
                    <div class="flex items-center justify-between">
                        <div class="flex items-center flex-1 min-w-0">
                            <div class="w-8 h-8 ${video.completed ? 'bg-green-100' : index === currentVideoIndex ? 'bg-blue-600' : 'bg-gray-200'} rounded-full flex items-center justify-center flex-shrink-0">
                                ${video.completed ? 
                                    '<i class="fas fa-check text-green-600 text-sm"></i>' :
                                    `<i class="fas ${index === currentVideoIndex ? 'fa-play text-white' : 'fa-play text-gray-600'} text-sm"></i>`
                                }
                            </div>
                            <div class="ml-3 min-w-0">
                                <p class="text-sm ${index === currentVideoIndex ? 'font-medium text-gray-900' : 'text-gray-700'} truncate">${video.title}</p>
                                <div class="flex items-center text-xs text-gray-500 mt-1">
                                    <span class="flex items-center mr-3">
                                        <i class="far fa-clock mr-1"></i>
                                        ${video.duration}
                                    </span>
                                    ${video.completed ? 
                                        '<span class="flex items-center text-green-600"><i class="fas fa-check mr-1"></i> Completed</span>' :
                                        ''
                                    }
                                </div>
                            </div>
                        </div>
                        ${index === currentVideoIndex ? 
                            '<div class="w-2 h-2 bg-blue-600 rounded-full animate-pulse"></div>' :
                            ''
                        }
                    </div>
                `;
                
                lessonItem.addEventListener('click', () => {
                    currentVideoIndex = index;
                    loadVideo(currentVideoIndex);
                });
                
                lessonContainer.appendChild(lessonItem);
            });
        }

        // Function to update active lesson
        function updateActiveLesson(index) {
            const lessonItems = document.querySelectorAll('.lesson-item');
            
            lessonItems.forEach((item, i) => {
                const icon = item.querySelector('div > div > div');
                const title = item.querySelector('p');
                const statusIndicator = item.querySelector('.w-2');
                
                if (i === index) {
                    item.classList.remove('border-gray-200', 'hover:bg-gray-50');
                    item.classList.add('border-blue-300', 'bg-blue-50');
                    
                    if (icon) {
                        icon.classList.remove('bg-gray-200', 'bg-green-100');
                        icon.classList.add('bg-blue-600');
                        icon.innerHTML = '<i class="fas fa-play text-white text-sm"></i>';
                    }
                    
                    if (title) {
                        title.classList.remove('text-gray-700');
                        title.classList.add('font-medium', 'text-gray-900');
                    }
                    
                    if (!statusIndicator) {
                        const indicator = document.createElement('div');
                        indicator.className = 'w-2 h-2 bg-blue-600 rounded-full animate-pulse';
                        item.querySelector('.flex.items-center.justify-between').appendChild(indicator);
                    }
                } else {
                    item.classList.remove('border-blue-300', 'bg-blue-50');
                    item.classList.add('border-gray-200', 'hover:bg-gray-50');
                    
                    if (icon) {
                        const video = courseVideos[i];
                        icon.classList.remove('bg-blue-600');
                        icon.className = `w-8 h-8 ${video.completed ? 'bg-green-100' : 'bg-gray-200'} rounded-full flex items-center justify-center flex-shrink-0`;
                        icon.innerHTML = video.completed ? 
                            '<i class="fas fa-check text-green-600 text-sm"></i>' :
                            '<i class="fas fa-play text-gray-600 text-sm"></i>';
                    }
                    
                    if (title) {
                        title.classList.remove('font-medium', 'text-gray-900');
                        title.classList.add('text-gray-700');
                    }
                    
                    if (statusIndicator) {
                        statusIndicator.remove();
                    }
                }
            });
        }

        // Function to update navigation buttons
        function updateNavigationButtons() {
            prevBtn.disabled = currentVideoIndex === 0;
            nextBtn.disabled = currentVideoIndex === courseVideos.length - 1;
            mobilePrevBtn.disabled = currentVideoIndex === 0;
            mobileNextBtn.disabled = currentVideoIndex === courseVideos.length - 1;
            
            const updateButtonState = (btn, isDisabled) => {
                if (isDisabled) {
                    btn.classList.add('opacity-50', 'cursor-not-allowed');
                    btn.classList.remove('hover:text-blue-600');
                } else {
                    btn.classList.remove('opacity-50', 'cursor-not-allowed');
                    btn.classList.add('hover:text-blue-600');
                }
            };
            
            updateButtonState(prevBtn, currentVideoIndex === 0);
            updateButtonState(nextBtn, currentVideoIndex === courseVideos.length - 1);
            updateButtonState(mobilePrevBtn, currentVideoIndex === 0);
            updateButtonState(mobileNextBtn, currentVideoIndex === courseVideos.length - 1);
        }

        // Function to update complete button
        function updateCompleteButton(completed) {
            if (completed) {
                completeBtn.innerHTML = `
                    <i class="fas fa-check-circle mr-2"></i>
                    Completed
                `;
                completeBtn.classList.remove('bg-green-600', 'hover:bg-green-700');
                completeBtn.classList.add('bg-green-500', 'cursor-default');
                completeBtn.disabled = true;
            } else {
                completeBtn.innerHTML = `
                    <i class="fas fa-check mr-2"></i>
                    Mark Complete
                `;
                completeBtn.classList.remove('bg-green-500', 'cursor-default');
                completeBtn.classList.add('bg-green-600', 'hover:bg-green-700');
                completeBtn.disabled = false;
            }
        }

        // Function to update progress
        function updateProgress() {
            const completedLessons = courseVideos.filter(video => video.completed).length;
            const progressPercent = Math.round((completedLessons / courseVideos.length) * 100);
            
            const progressBar = document.querySelector('.bg-gradient-to-r');
            const progressText = document.querySelector('.font-semibold.text-gray-900');
            const progressDetail = document.querySelector('.text-xs.text-gray-500');
            
            if (progressBar) {
                progressBar.style.width = `${progressPercent}%`;
            }
            if (progressText) {
                progressText.textContent = `${progressPercent}%`;
            }
            if (progressDetail) {
                progressDetail.textContent = `${completedLessons} of ${courseVideos.length} lessons completed`;
            }
        }

        // Event Listeners
        prevBtn.addEventListener('click', () => {
            if (currentVideoIndex > 0) {
                currentVideoIndex--;
                loadVideo(currentVideoIndex);
            }
        });

        nextBtn.addEventListener('click', () => {
            if (currentVideoIndex < courseVideos.length - 1) {
                currentVideoIndex++;
                loadVideo(currentVideoIndex);
            }
        });

        mobilePrevBtn.addEventListener('click', () => {
            if (currentVideoIndex > 0) {
                currentVideoIndex--;
                loadVideo(currentVideoIndex);
            }
        });

        mobileNextBtn.addEventListener('click', () => {
            if (currentVideoIndex < courseVideos.length - 1) {
                currentVideoIndex++;
                loadVideo(currentVideoIndex);
            }
        });

        completeBtn.addEventListener('click', () => {
            courseVideos[currentVideoIndex].completed = true;
            updateCompleteButton(true);
            updateProgress();
            generateLessonList();
            
            // Show completion message
            const message = document.createElement('div');
            message.className = 'fixed top-20 right-4 bg-green-500 text-white px-4 py-2 rounded-lg shadow-lg z-40 animate-slide-in';
            message.innerHTML = '<i class="fas fa-check-circle mr-2"></i> Lesson marked as complete!';
            document.body.appendChild(message);
            
            setTimeout(() => {
                message.remove();
            }, 3000);
        });

        bookmarkBtn.addEventListener('click', () => {
            isBookmarked = !isBookmarked;
            bookmarkBtn.innerHTML = isBookmarked ? 
                '<i class="fas fa-bookmark text-blue-600"></i>' :
                '<i class="far fa-bookmark"></i>';
            
            // Show feedback
            const message = document.createElement('div');
            message.className = 'fixed top-20 right-4 bg-blue-500 text-white px-4 py-2 rounded-lg shadow-lg z-40 animate-slide-in';
            message.innerHTML = isBookmarked ? 
                '<i class="fas fa-bookmark mr-2"></i> Bookmarked!' :
                '<i class="far fa-bookmark mr-2"></i> Bookmark removed';
            document.body.appendChild(message);
            
            setTimeout(() => {
                message.remove();
            }, 2000);
        });

        speedBtn.addEventListener('click', () => {
            const speeds = [0.5, 0.75, 1, 1.25, 1.5, 2];
            const currentIndex = speeds.indexOf(playbackSpeed);
            playbackSpeed = speeds[(currentIndex + 1) % speeds.length];
            
            videoPlayer.playbackRate = playbackSpeed;
            speedBtn.textContent = `${playbackSpeed}x`;
        });

        mobilePlayBtn.addEventListener('click', () => {
            if (videoPlayer.paused) {
                videoPlayer.play();
                mobilePlayBtn.innerHTML = `
                    <i class="fas fa-pause-circle text-xl mb-1"></i>
                    <span class="text-xs">Pause</span>
                `;
            } else {
                videoPlayer.pause();
                mobilePlayBtn.innerHTML = `
                    <i class="fas fa-play-circle text-xl mb-1"></i>
                    <span class="text-xs">Play</span>
                `;
            }
        });

        // Video player events
        videoPlayer.addEventListener('play', () => {
            mobilePlayBtn.innerHTML = `
                <i class="fas fa-pause-circle text-xl mb-1"></i>
                <span class="text-xs">Pause</span>
            `;
        });

        videoPlayer.addEventListener('pause', () => {
            mobilePlayBtn.innerHTML = `
                <i class="fas fa-play-circle text-xl mb-1"></i>
                <span class="text-xs">Play</span>
            `;
        });

        // Fullscreen functionality
        document.getElementById('fullscreenBtn').addEventListener('click', () => {
            if (!document.fullscreenElement) {
                videoPlayer.requestFullscreen().catch(err => {
                    console.log(`Error attempting to enable fullscreen: ${err.message}`);
                });
            } else {
                document.exitFullscreen();
            }
        });

        // Tab switching function
        function switchTab(tabName) {
            const tabs = document.querySelectorAll('.tab-content');
            const buttons = document.querySelectorAll('.tab-btn');
            
            tabs.forEach(tab => tab.classList.add('hidden'));
            buttons.forEach(btn => {
                btn.classList.remove('active', 'border-blue-600', 'text-blue-600');
                btn.classList.add('border-transparent', 'text-gray-500');
            });
            
            document.getElementById(tabName).classList.remove('hidden');
            event.target.classList.add('active', 'border-blue-600', 'text-blue-600');
            event.target.classList.remove('border-transparent', 'text-gray-500');
            
            // Scroll to tabs on mobile
            if (window.innerWidth < 1024) {
                document.querySelector('.tab-content').scrollIntoView({ behavior: 'smooth' });
            }
        }

        // Certificate modal functions
        function openModal() {
            document.getElementById('certificateModal').classList.remove('hidden');
            document.getElementById('certificateModal').classList.add('flex');
        }

        function closeModal() {
            document.getElementById('certificateModal').classList.add('hidden');
            document.getElementById('certificateModal').classList.remove('flex');
        }

        // Keyboard navigation
        document.addEventListener('keydown', (event) => {
            if (event.key === 'ArrowLeft' && currentVideoIndex > 0) {
                currentVideoIndex--;
                loadVideo(currentVideoIndex);
            } else if (event.key === 'ArrowRight' && currentVideoIndex < courseVideos.length - 1) {
                currentVideoIndex++;
                loadVideo(currentVideoIndex);
            } else if (event.key === ' ') {
                event.preventDefault();
                if (videoPlayer.paused) {
                    videoPlayer.play();
                } else {
                    videoPlayer.pause();
                }
            } else if (event.key === 'f' || event.key === 'F') {
                if (!document.fullscreenElement) {
                    videoPlayer.requestFullscreen();
                } else {
                    document.exitFullscreen();
                }
            }
        });

        // Initialize search functionality
        document.querySelector('input[placeholder="Search in course..."]').addEventListener('input', (e) => {
            const searchTerm = e.target.value.toLowerCase();
            const lessonItems = document.querySelectorAll('.lesson-item');
            
            lessonItems.forEach((item, index) => {
                const title = courseVideos[index].title.toLowerCase();
                if (title.includes(searchTerm) || searchTerm === '') {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        });
    </script>
    
