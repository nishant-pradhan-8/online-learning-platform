    <script>
        // Toggle sidebar submenus
        function toggleSubmenu(id) {
            const submenu = document.getElementById(id + '-submenu');
            const button = event.currentTarget;
            
            // Toggle current submenu
            submenu.classList.toggle('hidden');
            
            // Rotate chevron icon
            const chevron = button.querySelector('.fa-chevron-down');
            chevron.classList.toggle('rotate-180');
            
            // Highlight active button
            const isActive = submenu.classList.contains('hidden');
            if (id === 'students') {
                button.classList.toggle('bg-teal-600', !isActive);
                button.classList.toggle('text-white', !isActive);
                button.classList.toggle('hover:bg-teal-50', isActive);
                button.classList.toggle('hover:text-teal-600', isActive);
                button.classList.toggle('text-gray-700', isActive);
            } else {
                button.classList.toggle('bg-teal-50', !isActive);
                button.classList.toggle('text-teal-600', !isActive);
            }
        }

        // Initialize dropdowns
        document.addEventListener('DOMContentLoaded', function() {
            // Add transition to dropdown chevrons
            const chevrons = document.querySelectorAll('.sidebar-dropdown .fa-chevron-down');
            chevrons.forEach(chevron => {
                chevron.style.transition = 'transform 0.2s ease';
            });
            
            // Add rotate class
            const style = document.createElement('style');
            style.textContent = `
                .rotate-180 {
                    transform: rotate(180deg);
                }
                .sidebar-dropdown button {
                    transition: all 0.2s ease;
                }
            `;
            document.head.appendChild(style);
        });
